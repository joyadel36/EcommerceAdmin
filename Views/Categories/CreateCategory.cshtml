﻿@using System.Globalization
@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer localizer
@model WebApplication1.ViewModels.CategoryViewModel

@{
    ViewData["Title"] = "CreateCategory";
}




<div class="row justify-content-center ">
    <div class="col-9 mt-3 mx-auto border border-top-0 border-primary-subtle">
        <h1 class="text-center">@localizer["createcategory"]</h1>
        <hr class="col-6  mx-auto" />
        <form asp-action="CreateCategory">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CategoryName" class="control-label">@localizer["enname"]</label>
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <label asp-for="ArCategoryName" class="control-label">@localizer["arname"]</label>
                <input asp-for="ArCategoryName" class="form-control" />
                <span asp-validation-for="ArCategoryName" class="text-danger"></span>
            </div>
            <br />
            <br />
            <div class="form-group  pb-2">
                <input type="submit" value=@localizer["create"] class="btn btn-primary col-10  mx-auto d-block " />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-action="GetAllCategories" class="btn btn-outline-info" >@localizer["back"]</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
