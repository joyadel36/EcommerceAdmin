﻿@using System.Globalization
@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer localizer

@{
    ViewData["Title"] = "Home Page";

}
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

<div class="container">
    <div class="row d-flex justify-content-evenly  m-2 " style="height:200px;">
        <a class="col-md-5 col-sm-10 mb-2 p-1 border border-primary-subtle btn-outline-info text-decoration-none fs-2 text-dark text-center d-flex justify-content-center align-items-center"
           asp-area="" asp-controller="Customers" asp-action="CreateCustomer">
            <div>
                <div><i class="fa-solid fa-person"></i><i class="fa-solid fa-person"></i><i class="fa-solid fa-person"></i></div>
                <div>@localizer["customers"]</div>
            </div>
        </a>
        <a class="col-md-5 col-sm-10 mb-2 p-1 border border-primary-subtle btn-outline-info text-decoration-none fs-2 text-dark text-center d-flex justify-content-center align-items-center" asp-area="" asp-controller="Customers" asp-action="GetAllCustomers">
            <div>
                <div><i class="fa-solid fa-file-invoice"></i></div>
                <div>@localizer["invoice"]</div>
            </div>
        </a>

</div>
    <div class="row  d-flex justify-content-evenly  m-2 " style="height:200px;">
        <a class="col-md-5 col-sm-10 mb-2 p-1 border border-primary-subtle btn-outline-info text-decoration-none fs-2 text-dark text-center d-flex justify-content-center align-items-center" asp-area="" asp-controller="Categories" asp-action="GetAllCategories">
            <div>
                <div><i class="fa-solid fa-list"></i></div>
                <div>@localizer["category"]</div>
            </div>
        </a>


        <a class="col-md-5 col-sm-10 mb-2 p-1 border border-primary-subtle btn-outline-info text-decoration-none fs-2 text-dark text-center d-flex justify-content-center align-items-center" asp-area="" asp-controller="CategoryItems" asp-action="CreateCategoryItem">
            <div>
                <div><i class="fa-solid fa-plus"></i></div>
                <div>@localizer["categoryitem"] </div>
            </div>
        </a>
</div>
</div>
   









