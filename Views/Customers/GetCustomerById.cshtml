﻿@using System.Globalization
@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer localizer
@model WebApplication1.Models.Customers

@{
    ViewData["Title"] = "GetCustomerById";
}


<div class="Container">
<div class="row justify-content-center ">
    <div class="col-9 mt-3 mx-auto border border-top-0 border-primary-subtle">
        <h1>@Model.FirstName @Model.LastName</h1>
    <dl>
        <dt >
            @localizer["firstname"]
        </dt>
        <dd >
            @Model.FirstName
        </dd>
        <dt >
            @localizer["lastname"]
        </dt>
        <dd >
            @Model.LastName
        </dd>
        <dt >
            @localizer["city"]
        </dt>
        <dd >
            @Model.City
        </dd>
        <dt >
            @localizer["region"]
        </dt>
        <dd >
            @Model.Region
        </dd>
        <dt>
            @localizer["street"]
        </dt>
        <dd class = "col-sm-10">
            @Model.Street
        </dd>
        <dt >
            @localizer["buildingnumber"]
        </dt>
        <dd >
            @Model.BuildingNumber
        </dd>
        <dt >
            @localizer["phonenumber"]
        </dt>
        <dd >
            @Model.PhoneNumber
        </dd>
        <dt >
            @localizer["email"]
        </dt>
        <dd>
            @Model.Email
        </dd>
    </dl>
    </div>
</div>

<div class="row justify-content-center ">
    <a asp-action="EditCustomer" asp-route-id="@Model?.ID" class="btn btn-outline-info">@localizer["editcustomer"]</a> &ensp;&ensp;
    <a asp-action="GetAllCustomers" class="btn btn-outline-info">@localizer["back"]</a>
</div>
</div>